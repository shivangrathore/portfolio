---
type Props = {
  title: string;
  description: string;
  date: string;
  readTime: string;
};
const { title, description, date, readTime } = Astro.props;
---

<a
  class="bg-neutral-950 border border-gray-500/25 p-4 cursor-pointer hover:bg-neutral-900 transition-colors rounded-lg"
>
  <h3 class="text-xl md:text-2xl font-bold">{title}</h3>
  <p class="text-gray-400 mt-1 md:mt-2">{description}</p>
  <div
    class="text-gray-600 mt-2 md:mt-4 text-sm md:text-base space-x-2 flex items-center"
  >
    <span>
      {date}
    </span>
    <span>
      {readTime}
    </span>
  </div>
</a>
