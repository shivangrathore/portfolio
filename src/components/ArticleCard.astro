---
import { type CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">;
const {
  id,
  data: { title, description },
} = Astro.props;
---

<a
  class="bg-neutral-950 border border-gray-500/25 p-4 cursor-pointer hover:bg-neutral-900 transition-colors rounded-lg w-full"
  href=`/blog/${id}`
>
  <div class="space-x-2 flex items-center text-gray-300">
    <span>
      <!-- {date} -->
      12/12/2021
    </span>
    <span>{"â€¢"}</span>
    <span>
      6 min read
      <!-- {readTime} -->
    </span>
  </div>
  <h3 class="text-2xl font-bold mt-4">{title}</h3>
  <p class="text-gray-400 mt-2">{description}</p>
</a>
